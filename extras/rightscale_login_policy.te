
module rightscale_login_policy 1.0;

require {
	type sshd_t;
	type var_lib_t;
	type chkpwd_t;
	class file ioctl;
	class file getattr;
	class file open;
	class file read;
}

#============= sshd_t ==============
allow sshd_t var_lib_t:file ioctl;
allow sshd_t var_lib_t:file open;
allow sshd_t var_lib_t:file read;
allow sshd_t var_lib_t:file getattr;
allow chkpwd_t var_lib_t:file ioctl;
allow chkpwd_t var_lib_t:file open;
allow chkpwd_t var_lib_t:file read;
allow chkpwd_t var_lib_t:file getattr;
